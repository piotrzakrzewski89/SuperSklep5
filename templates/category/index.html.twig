{% extends 'base.html.twig' %}
{% trans_default_domain 'app' %}

{% block title %}
	{{ parent() }}
	{{ 'page_title.category_admin_page'|trans }}
{% endblock %}

{% block body %}
	<br>
	<div class="row">
		{% include 'inc/admin_panel.html.twig' %}
		<div class="card col-lg-9">
			<div class="card-header">
				<i class="fas fa-table mr-1"></i>
				Tabelka Kategorie
                <a class="btn btn-info float-right" href="{{ path('admin_category_new') }}">Dodaj kategorie</a>
			</div>
			<div class="card-body">
				<div class="table-responsive">
					<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
						<thead>
							<tr>
								<th>#</th>
								<th>id</th>
								<th>name</th>
								<th>code</th>
							</tr>
						</thead>
						<tfoot>
							<tr>
								<th>#</th>
								<th>id</th>
								<th>name</th>
								<th>code</th>
							</tr>
						</tfoot>
						<tbody>
							{% for category in categoryData %}
								<tr>
									<td>{{ loop.index }}</td>
									<td>{{ category.id }}</td>
									<td>{{ category.name }}</td>
									<td>{{ category.code }}</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
	<br>
{% endblock %}
