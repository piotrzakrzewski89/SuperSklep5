{% extends 'base.html.twig' %}
{% trans_default_domain 'app' %}

{% block title %}
	{{parent()}}
	{{ 'page_title.category_new_page'|trans }}
{% endblock %}

{% block body %}
	<br>
	<h1>{{ 'category_form.title_label'|trans }}</h1>
	{% form_theme categoryForm 'bootstrap_4_layout.html.twig' %}
	{{ form_start(categoryForm) }}
	{{ form_row(categoryForm.name) }}
	{{ form_row(categoryForm.code) }}
	{{ form_row(categoryForm.language) }}
	<div class="form-inline">
		{{ form_row(categoryForm.save, {'attr': {'class': 'btn btn-outline-primary'}}) }}
		{{ form_row(categoryForm.save_add_next, {'attr': {'class': 'btn btn-outline-success'}}) }}
		<a href="{{ path('category') }}" class="btn btn-outline-danger">{{ 'form.cancel_button_label'|trans }}</a>
	</div>
	{{ form_end(categoryForm) }}
	<br>
{% endblock %}
