{% extends 'base.html.twig' %}
{% trans_default_domain 'app' %}

{% block title %}
	{{parent()}}
	{{ 'page_title.statuses_new_page'|trans }}
{% endblock %}

{% block body %}
	<br>
	<h1>{{ 'langauge_form.title_label'|trans }}</h1>
	{% form_theme statusesForm 'bootstrap_4_layout.html.twig' %}
	{{ form_start(statusesForm) }}
	{{ form_row(statusesForm.name) }}
	{{ form_row(statusesForm.language) }}
	<div class="form-inline">
		{{ form_row(statusesForm.save, {'attr': {'class': 'btn btn-outline-primary'}}) }}
		{{ form_row(statusesForm.save_add_next, {'attr': {'class': 'btn btn-outline-success'}}) }}
		<a href="{{ path('statuses') }}" class="btn btn-outline-danger">{{ 'form.cancel_button_label'|trans }}</a>
	</div>
	{{ form_end(statusesForm) }}
	<br>
{% endblock %}
