{% extends 'base.html.twig' %}
{% trans_default_domain 'app' %}

{% block title %}
	{{parent()}}
	{{ 'page_title.langauge_new_page'|trans }}
{% endblock %}

{% block body %}
	<br>
	<h1>{{ 'langauge_form.title_label'|trans }}</h1>
	{% form_theme languageForm 'bootstrap_4_layout.html.twig' %}
	{{ form_start(languageForm) }}
	{{ form_row(languageForm.name) }}
	{{ form_row(languageForm.code) }}
	<button type="submit" class="btn btn-outline-primary">{{ 'language_form.button_label'|trans }}</button>
	{{ form_end(languageForm) }}
	<br>
{% endblock %}
