{% extends 'base.html.twig' %}
{% trans_default_domain 'app' %}

{% block title %}
	{{ parent() }}
	{{ 'page_title.language_admin_page'|trans }}
{% endblock %}

{% block body %}
	<br>
	<div class="row">
		{% include 'inc/admin_panel.html.twig' %}
		<div class="card col-lg-9">
			<div class="card-header">
				<i class="fas fa-table mr-1"></i>
				Tabelka Języki
				<a class="btn btn-info float-right" href="{{ path('language_new') }}">Dodaj język</a>
			</div>
			<div class="card-body">
				<div class="table-responsive">
					<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
						<thead>
							<tr>
								<th>#</th>
								<th>id</th>
								<th>name</th>
								<th>code</th>
							</tr>
						</thead>
						<tfoot>
							<tr>
								<th>#</th>
								<th>id</th>
								<th>name</th>
								<th>code</th>
							</tr>
						</tfoot>
						<tbody>
							{% for langauge in languageData %}
								<tr>
									<td>{{ loop.index }}</td>
									<td>{{ langauge.id }}</td>
									<td>{{ langauge.name }}</td>
									<td>{{ langauge.code }}</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
	<br>
{% endblock %}
